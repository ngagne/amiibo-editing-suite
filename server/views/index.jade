doctype
html.no-js
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title Amiibo Cheat Tool by VGMoz
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/css/global.min.css')
    body
        div(class="container")
            header
                h1 Amiibo Cheat Tool by&nbsp;
                    a(href="http://www.vgmoz.com/", target="_blank") VGMoz

            p
                small Looking for the&nbsp;
                    a(href="/hex") Amiibo Hex Editing Tool?

            form(action="/", method="post", enctype="multipart/form-data")
                div(class="row")
                    div(class="col-sm-6")
                        div(class="form-group")
                            label Amiibo Dump (binary format):
                            input(type="file", name="bin", required="required", class="form-control")
                    div(class="col-sm-6")
                        div(class="form-group")
                            label Game&nbsp;
                            select(name="game", class="form-control")
                                option(value="") Select Game
                                each game in xml.games
                                    option(value="#{game.id}") #{game.name}


                section(id="game-0")
                    h2 Super Smash Bros.

                    div(class="row")
                        div(class="col-sm-6")
                            h3 Bonus Effects
                            div(class="form-group")
                                label Slot 1
                                    |&nbsp;
                                select(name="bonus_effect_1", class="form-control")
                                    option(value="") No Change
                                    each cheat in xml.lists[0]
                                        option(value="#{cheat.data}") #{cheat.name}
                            div(class="form-group")
                                label Slot 2
                                    |&nbsp;
                                select(name="bonus_effect_2", class="form-control")
                                    option(value="") No Change
                                    each cheat in xml.lists[0]
                                        option(value="#{cheat.data}") #{cheat.name}
                            div(class="form-group")
                                label Slot 3
                                    |&nbsp;
                                select(name="bonus_effect_3", class="form-control")
                                    option(value="") No Change
                                    each cheat in xml.lists[0]
                                        option(value="#{cheat.data}") #{cheat.name}

                            h3 Stats
                            div(class="form-group")
                                label Attack
                                    |&nbsp;
                                    div(class="input-group")
                                        span(class="input-group-addon")
                                            input(type="checkbox", name="stat_attack_on", value="1")
                                        input(type="number", min="-200", max="200", value="0", name="stat_attack", class="form-control")
                            div(class="form-group")
                                label Defense
                                    |&nbsp;
                                    div(class="input-group")
                                        span(class="input-group-addon")
                                            input(type="checkbox", name="stat_defense_on", value="1")
                                        input(type="number", min="-200", max="200", value="0", name="stat_defense", class="form-control")
                            div(class="form-group")
                                label Speed
                                    |&nbsp;
                                    div(class="input-group")
                                        span(class="input-group-addon")
                                            input(type="checkbox", name="stat_speed_on", value="1")
                                        input(type="number", min="-200", max="200", value="0", name="stat_speed", class="form-control")


                        div(class="col-sm-6")
                            h3 Special Moves
                            div(class="form-group")
                                label Standard
                                    |&nbsp;
                                select(name="standard", class="form-control")
                                    option(value="") No Change
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3
                            div(class="form-group")
                                label Side
                                    |&nbsp;
                                select(name="side", class="form-control")
                                    option(value="") No Change
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3
                            div(class="form-group")
                                label Up
                                    |&nbsp;
                                select(name="up", class="form-control")
                                    option(value="") No Change
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3
                            div(class="form-group")
                                label Down
                                    |&nbsp;
                                select(name="down", class="form-control")
                                    option(value="") No Change
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3

                            h3 Misc
                            div(class="checkbox")
                                label
                                    input(type="checkbox", name="random_items", value="1")
                                    | Random gold and items
                            div(class="form-group")
                                label Level
                                    |&nbsp;
                                select(name="level", class="form-control")
                                    option(value="") No Change
                                    option(value="0000") 1
                                    option(value="00c8") 10
                                    option(value="0240") 20
                                    option(value="0440") 30
                                    option(value="06c0") 40
                                    option(value="093e") 50
                            div(class="form-group")
                                label Appearance
                                    |&nbsp;
                                select(name="appearance", class="form-control")
                                    option(value="") No Change
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3
                                    option(value="4") 4
                                    option(value="5") 5
                                    option(value="6") 6
                                    option(value="7") 7
                                    option(value="8") 8


                section(id="game-1")
                    h2 Mario Party 10

                    div(class="row")
                        div(class="col-sm-6")
                            div(class="form-group")
                                label Bases&nbsp;
                                select(name="base", class="form-control")
                                    option(value="") No Change
                                    each cheat in xml.lists[1]
                                        option(value="#{cheat.data}") #{cheat.name}
                        div(class="col-sm-6")
                            div(class="form-group")
                                label Tokens&nbsp;
                                select(name="token", class="form-control")
                                    option(value="") No Change
                                    each cheat in xml.lists[2]
                                        option(value="#{cheat.data}") #{cheat.name}



                section(id="game-2")
                    h2 Animal Crossing Happy Home Designer

                    div(class="row")
                        div(class="col-sm-6")
                            h3 Items

                            div(class="form-group")
                                label Slot
                                select(name="hhd_slot", class="form-control")
                                    - var n = 0
                                    while n < 64
                                        option(value="#{n}") #{n+1}
                                        - n++

                                label Item
                                    label Slot
                                        |&nbsp;
                                    select(name="hhd_item", class="form-control")
                                        option(value="") No Change
                                        each cheat in xml.lists[3]
                                            option(value="#{cheat.data}") #{cheat.name}

                section(id="game-3")
                    h2 Mario Tennis Ultra Smash

                    div(class="row")
                        div(class="col-sm-6")
                            h3 Stats
                            - var n = 0
                            while n < 10
                                div(class="form-group")
                                    label Slot #{n+1}
                                        |&nbsp;
                                    select(name="tennis_slot_#{n}", class="form-control")
                                        option(value="") No Change
                                        each cheat in xml.lists[4]
                                            option(value="#{cheat.data}") #{cheat.name}
                                - n++

                        div(class="col-sm-6")
                            h3 Misc
                            div(class="form-group")
                                label Games Played
                                    | &nbsp;
                                    div(class="input-group")
                                        span(class="input-group-addon")
                                            input(type="checkbox", name="tennis_games_played_on", value="1")
                                        input(type="number", min="0", max="9998", value="0", name="tennis_games_played", class="form-control")



                section(id="game-4")
                    h2 Chibi-Robo! Zip Lash

                    div(class="row")
                        div(class="col-sm-6")
                            div(class="form-group")
                                label Level
                                    |&nbsp;
                                select(name="chibi_level", class="form-control")
                                    option(value="") No Change
                                    - var n = 1
                                    while n < 7
                                        option(value="#{n}") #{n}
                                        - n++

                section(id="game-5")
                    h2 Animal Crossing: Amiibo Festival

                section(id="game-7")
                    h2 Shovel Knight (Wii U / 3DS)

                    //
                        div(class="row")
                            div(class="col-sm-6")
                                div(class="checkbox")
                                    label
                                        input(type="checkbox", name="shovel_level_up", value="1")
                                        | Quickly Level Up

                    div(class="row")
                        div(class="col-sm-6")
                            div(class="form-group")
                                label Level
                                    |&nbsp;
                                select(name="shovel_level", class="form-control")
                                    option(value="") No Change
                                    - var n = 0
                                    while n <= 50
                                        option(value="#{n}") #{n}
                                        - n++



                p
                    input(type="submit", value="Upload & Modify Amiibo", class="btn btn-primary")

                p(class="hide alert alert-info") Processing data, please wait...

                script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
                script(src='/js/main.min.js')